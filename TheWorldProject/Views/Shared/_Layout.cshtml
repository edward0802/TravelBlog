<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lib/bootswatch/dist/spacelab/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="wrapper">

        <div class="sidebar">
            @if (User.Identity.IsAuthenticated)
            {
                <img class="photo" src="~/img/IMG_1084.jpg" alt="Face" />
                <span class="username">@User.Identity.Name</span>
            }

            <ul class="nav flex-column">
                <li class="nav-item li-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                <li class="nav-item li-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
                <li class="nav-item li-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item li-item"><a class="nav-link" asp-controller="App" asp-action="Trips">Trips</a></li>
                    <li class="nav-item li-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a></li>

                }
                else
                {
                    <li class="nav-item li-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a></li>
                }

            </ul>
        </div>


        <div class="very-main">
            <nav class="navbar navbar-expand-sm bg-light navbar-light" style="padding: 15px;">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="sidebarToggle btn btn-sm">
                            <i class="fa fa-chevron-left"></i>
                        </button>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="btn btn-sm">
                            <i class="fa fa-save"></i> Save
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="btn btn-sm">
                            <i class="fa fa-print"></i> Print
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="main container-fluid">


                @RenderBody()

            </div>
            <div class="footer container-fluid">
                <div class="navbar fixed-bottom bg-light navbar-light">
                    <h4 class="m-auto">&copy; Edwrad's Corp.</h4>
                </div>
            </div>
        </div>

    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <environment names="Development,Testing">
        <script src="~/js/script.js"></script>
    </environment>
    <environment names="Production,Staging">
        <script src="~/js/script.min.js"></script>
    </environment>

    @RenderSection("scripts", false)


</body>
</html>